}

/* Simple Logo Class */
.humareso-logo {
  background-image: url('https://cdn-hds.humareso.com/images/shared/logos/humareso_logo_original_r.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: inline-block;
