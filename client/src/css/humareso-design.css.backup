@import "fonts.css";
/* Humareso Design System - CSS Variables */

:root {
  /* Primary Colors */
  --humareso-red: #EF2E24;
  --humareso-navy: #032F46;
  --humareso-off-white: #F4F6F9;
  
  /* Reds */
  --humareso-red-primary: #EF2E24;
  --humareso-red-dark: #670204;
  --humareso-red-light: #F9DEDE;
  --humareso-red-muted: #C9261C;
  
  /* Blues */
  --humareso-blue-black: #050707;
  --humareso-blue-navy: #032F46;
  --humareso-blue-light: #CFD8E5;
  --humareso-blue-off-white: #F4F6F9;
  
  /* Text Colors */
  --text-dark: #1F3440;
  --text-medium: #3B4B56;
  --text-light: #FFFFFF;
  --text-light-80: rgba(255, 255, 255, 0.8);
  
  /* Browns */
  --humareso-brown-dark: #4F1D0B;
  --humareso-brown-medium: #964C31;
  
  /* Analogous & Tetradic Colors */
  --humareso-orange: #C97C1C;
  --humareso-yellow-green: #BFC91C;
  --humareso-green: #68C91C;
  --humareso-teal: #1EC4CC;
  --humareso-purple: #7D1ECC;
  
  /* Typography */
  --font-family: 'Elza', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-light: 300;
  --font-weight-black: 900;
  
  /* Spacing & Layout */
  --header-spacing: -0.02em;
  --line-height: 1.5;
  --border-radius: 8px;
  --border-radius-sm: 4px;
  --border-radius-lg: 12px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  
  /* Transitions */
  --transition-fast: 150ms ease-in-out;
  --transition-normal: 250ms ease-in-out;
  --transition-slow: 350ms ease-in-out;
}

/* Typography Classes */
.humareso-text-header {
  font-family: var(--font-family);
  font-weight: var(--font-weight-black);
  letter-spacing: var(--header-spacing);
  line-height: var(--line-height);
}

.humareso-text-subheader {
  font-family: var(--font-family);
  font-weight: var(--font-weight-light);
  letter-spacing: var(--header-spacing);
  line-height: var(--line-height);
}

.humareso-text-body {
  font-family: var(--font-family);
  font-weight: var(--font-weight-medium);
  line-height: var(--line-height);
}

/* Color Utility Classes */
.humareso-bg-primary { background-color: var(--humareso-red); }
.humareso-bg-secondary { background-color: var(--humareso-navy); }
.humareso-bg-light { background-color: var(--humareso-off-white); }

.humareso-text-primary { color: var(--humareso-red); }
.humareso-text-secondary { color: var(--humareso-navy); }
.humareso-text-dark { color: var(--text-dark); }
.humareso-text-light { color: var(--text-light); }

/* Button Styles */


.humareso-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  font-size: 1em; /* Default font size */
  font-weight: var(--font-weight-medium);
  font-family: var(--font-family);
  text-decoration: none;
  border: 2px solid transparent;
  border-radius: var(--border-radius);
  transition: all var(--transition-normal);
  cursor: pointer;
}

.humareso-btn-sm {
  padding: 0.5rem 1rem;
  font-size: 0.75em; /* Small */
  min-height: 36px;
}

.humareso-btn-lg {
  padding: 1.25rem 2.5rem;
  font-size: 1.125rem; /* 18px */
  min-height: 56px;
}

.humareso-btn-icon-only {
  width: 44px;
  height: 44px;
  padding: 0;
  border-radius: 50%;
}

.humareso-btn-icon-only.humareso-btn-sm {
  width: 36px;
  height: 36px;
}

.humareso-btn-icon-only.humareso-btn-lg {
  width: 56px;
  height: 56px;
}

.humareso-btn-primary {
  background-color: var(--humareso-red);
  color: var(--text-light);
}

.humareso-btn-primary:hover {
  background-color: var(--humareso-red-muted);
}

.humareso-btn-secondary {
  background-color: var(--humareso-navy);
  color: var(--text-light);
}

.humareso-btn-secondary:hover {
  background-color: var(--humareso-blue-black);
}

.humareso-logo-bg-off-white {
  background-color: var(--humareso-blue-black);
}

