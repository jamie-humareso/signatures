.humareso-btn-primary {
  background: linear-gradient(180deg, var(--humareso-red) 0%, var(--humareso-red-muted) 100%);
  color: var(--text-light);
  border-color: var(--humareso-red);
}

.humareso-btn-primary:hover:not(:disabled) {
  background: linear-gradient(180deg, var(--humareso-red-muted) 0%, var(--humareso-red-dark) 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(239, 46, 36, 0.3);
}

.humareso-btn-primary:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: 0 2px 6px rgba(239, 46, 36, 0.3);
}

/* Secondary button (hollow with blur effect) */
.humareso-btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
  color: var(--humareso-red);
  border-color: var(--humareso-red);
}

.humareso-btn-secondary:hover:not(:disabled) {
  background: rgba(239, 46, 36, 0.1);
  border-color: var(--humareso-red-muted);
  color: var(--humareso-red-muted);
}

/* Success button */
.humareso-btn-success {
  background: linear-gradient(180deg, #10b981 0%, #059669 100%);
  color: var(--text-light);
  border-color: #10b981;
}

.humareso-btn-success:hover:not(:disabled) {
  background: linear-gradient(180deg, #059669 0%, #047857 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

/* Info button */
.humareso-btn-info {
  background: linear-gradient(180deg, #3b82f6 0%, #2563eb 100%);
  color: var(--text-light);
  border-color: #3b82f6;
}

.humareso-btn-info:hover:not(:disabled) {
  background: linear-gradient(180deg, #2563eb 0%, #1d4ed8 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

/* Warning button */
.humareso-btn-warning {
  background: linear-gradient(180deg, #f59e0b 0%, #d97706 100%);
  color: var(--text-light);
  border-color: #f59e0b;
}

.humareso-btn-warning:hover:not(:disabled) {
  background: linear-gradient(180deg, #d97706 0%, #b45309 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
}

/* Danger button */
.humareso-btn-danger {
  background: linear-gradient(180deg, #ef4444 0%, #dc2626 100%);
  color: var(--text-light);
  border-color: #ef4444;
}

.humareso-btn-danger:hover:not(:disabled) {
  background: linear-gradient(180deg, #dc2626 0%, #b91c1c 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

/* Icon styles */
.humareso-btn-icon {
  width: 1.2em;
  height: 1.2em;
}

/* Button with icon only */
.humareso-btn-icon-only {
  width: 44px;
  height: 44px;
  padding: 0;
  border-radius: 50%;
}

.humareso-btn-icon-only.humareso-btn-sm {
  width: 36px;
  height: 36px;
}

.humareso-btn-icon-only.humareso-btn-lg {
  width: 56px;
  height: 56px;
}

/* Loading state */
.humareso-btn-loading {
  position: relative;
  color: transparent;
}

.humareso-btn-loading::after {
  content: '';
  position: absolute;
  width: 16px;
  height: 16px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Custom color button support */
.humareso-btn-custom {
  background: linear-gradient(180deg, var(--btn-color) 0%, var(--btn-color-dark) 100%);
  color: var(--text-light);
  border-color: var(--btn-color);
}

.humareso-btn-custom:hover:not(:disabled) {
  background: linear-gradient(180deg, var(--btn-color-dark) 0%, var(--btn-color-darker) 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(var(--btn-color-rgb), 0.3);
}
